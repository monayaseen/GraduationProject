<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg33"
    tools:context=".Actitvity.ViewItem"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/view_item_name"
        android:layout_width="221dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:text="@string/Item_name"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/prod_image"
        android:layout_width="377dp"
        android:layout_height="336dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="30dp"
            tools:layout_editor_absoluteY="462dp"
            />
        <TextView
            android:id="@+id/tvNoOfRent"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="30dp"
            tools:layout_editor_absoluteY="462dp"
            />
        <TextView
            android:id="@+id/view_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:layout_gravity="right"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:numStars="5"
        android:stepSize="0.5"
        />
    <ImageButton
        android:id="@+id/Rate_btn"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/rate"
        android:text="@string/submit_rate"
        app:layout_constraintStart_toEndOf="@+id/ratingBar" />

</LinearLayout>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    >
    <ImageButton
        android:id="@+id/AddToCart"
        android:layout_width="80sp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:background="@drawable/rent"

        />

    <ImageButton

        android:id="@+id/Rent"
        android:layout_marginStart="200dp"
        android:layout_width="80sp"
        android:layout_height="80dp"
        android:background="@drawable/addtocart"

        />
</androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>